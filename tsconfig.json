{
    "ts-node": {
        "require": [
            "tsconfig-paths/register"
        ]
    },
    "compilerOptions": {
        "esModuleInterop": true,
        "target": "es6",
        "module": "CommonJS",
        "moduleResolution": "node",
        "outDir": "./dist",
        "allowJs": true,
        "strict": true,
        "rootDir": "./",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "baseUrl": ".",
        "types": ["jest", "node", "@types/jest"],
        "paths": {
            "@bin/*": ["src/bin", "src/bin/*"],
            "@config/*": ["src/config", "src/config/*"],
            "@controllers/*": ["src/controllers", "src/controllers/*"],
            "@exceptions/*": ["src/exceptions", "src/exceptions/*"],
            "@helpers/*": ["src/helpers", "src/helpers/*"],
            "@interfaces/*": ["src/interfaces", "src/interfaces/*"],
            "@models/*": ["src/models", "src/models/*"],
            "@routes/*": ["src/routes", "src/routes/*"],
            "@routes_v1.0/*": ["src/routes/v1.0", "src/routes/v1.0/*"],
            "@security/*": ["src/security", "src/security/*"],
            "@services/*": ["src/services", "src/services/*"],
            "@middleware/*": ["src/middleware", "src/middleware/*"],
            "@decorators/*": ["src/helpers/decorators", "src/helpers/decorators/*"],
            "@enums/*": ["src/helpers/enums", "src/helpers/enums/*"],
            "@data/*": ["src/data", "src/data/*"],
            "@repositories/*": ["src/repositories", "src/repositories/*"],
            "@connections/*": ["src/connections", "src/connections/*"],
        }
    },
    "exclude": ["node_modules"],
    "include": ["./src/**/*", "tests"]
}
